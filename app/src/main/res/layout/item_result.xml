<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/item_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/blue_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tx_salary"
        style="@style/RedButton"
        android:background="@null"
        android:textColor="@color/red"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tx_tax"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tx_tax"
        style="@style/ItemText"
        android:text="税：1232222222222222222222222"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintRight_toLeftOf="@+id/tx_total_tax"
        app:layout_constraintLeft_toRightOf="@id/tx_salary"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tx_total_tax"
        app:layout_constraintHorizontal_weight="1"

        style="@style/ItemText"
        android:text="累计：123"
        app:layout_constraintLeft_toRightOf="@id/tx_tax"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tx_calculate"
        style="@style/ItemText"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"

        android:text="计税额:1324413"
        app:layout_constraintLeft_toRightOf="@id/tx_salary"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tx_tax" />

    <TextView
        android:id="@+id/tx_total_calculate"
        style="@style/ItemText"
        android:layout_width="0dp"
        android:text="累计税额:1324413"
        android:visibility="gone"
        app:layout_constraintLeft_toRightOf="@id/tx_salary"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tx_calculate" />
</android.support.constraint.ConstraintLayout>